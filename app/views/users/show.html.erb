
<% content_for :head do %>
  <title><%= full_title %></title>
<% end %>

<%= render 'shared/header' %>
<div class="row">
  <div class=>
    <aside class="col-md-4">
      <section class="user_info pl-2">
        <h1>
          <%= @user.name %>
          <br>
          <%= @user.email %>
          <br>
          <section class="event">
          <%= render 'shared/event_form' %>
          </section>
        </h1>
      </section>
    </aside>
      <div class="col-md-4">
        <h3>Events Created by me </h3>
        <%= render 'shared/feed' %>
      </div>
      <div class="col-md-4">
        <% if @user.event_attendance.any? %>
          <h3>Events Attended by me </h3>
          <ol class="event">
            <% @user.event_attendance.each do |x| %>
              <li>Event: <%= Event.find_by(id: x.attended_event).description %> </li>
              <li>Created by: <%= Event.find_by(id: x.attended_event).user.name %></li>
            <% end %>
          </ol>
        <% end %>
      </div>
  
    </div>
  </div>
</div>